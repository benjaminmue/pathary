<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="csrf-token" content="{{ csrf_token() }}">
    <title>{% block title %}{{ applicationName ?? 'Pathary' }}{% endblock %}</title>
    <link rel="shortcut icon" href="{{ applicationUrl }}/images/favicon.ico" type="image/x-icon">

    <!-- Theme initialization (runs before page render to prevent flash) -->
    <script>
        (function() {
            const saved = localStorage.getItem('theme');
            const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
            const theme = saved || (prefersDark ? 'dark' : 'light');
            document.documentElement.setAttribute('data-bs-theme', theme);
        })();
    </script>

    <!-- Bootstrap CSS (Local) -->
    <link href="{{ applicationUrl }}/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ applicationUrl }}/css/bootstrap-icons-1.10.2.css">

    <!-- Global CSS -->
    <link rel="stylesheet" href="{{ applicationUrl }}/css/global.css">

    <!-- Custom Theme CSS -->
    <link rel="stylesheet" href="{{ applicationUrl }}/assets/css/theme.css">

    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">
    {% include 'partials/navbar_app.twig' %}

    {# OAuth Monitoring Banner (Admin Only) #}
    {% include 'partials/oauth_monitor_banner.twig' %}

    <main class="flex-grow-1 pb-4">
        {% block body %}{% endblock %}
    </main>

    {% block footer %}{% endblock %}

    {% if showFooter is not defined or showFooter %}
    {% include 'partials/footer.twig' %}
    {% endif %}

    <!-- Global Health Status Notification -->
    <div id="health-alert" class="position-fixed top-0 end-0 m-3" style="z-index: 9999; display: none; min-width: 300px;">
        <div class="alert alert-danger alert-dismissible fade show shadow" role="alert">
            <h6 class="alert-heading mb-2"><i class="bi bi-exclamation-triangle-fill me-2"></i>System Health Alert</h6>
            <div id="health-alert-message" class="small"></div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>

    <!-- Bootstrap JS (Local) -->
    <script src="{{ applicationUrl }}/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Components JS -->
    <script src="{{ applicationUrl }}/assets/js/popcorn.js"></script>

    <!-- Theme Toggle JS -->
    <script src="{{ applicationUrl }}/assets/js/theme.js"></script>

    <!-- Background Health Check (Admin Only) -->
    {% if currentUser is defined and currentUser is not null and currentUser.isAdmin() %}
    <script>
        (function() {
            const HEALTH_CHECK_INTERVAL = 60000; // 60 seconds
            let lastCheck = 0;

            async function checkSystemHealth() {
                const now = Date.now();

                // Rate limit: only check once per minute
                if (now - lastCheck < HEALTH_CHECK_INTERVAL) {
                    return;
                }

                lastCheck = now;

                try {
                    const response = await fetch('{{ applicationUrl }}/admin/health');
                    if (!response.ok) {
                        return;
                    }

                    const data = await response.json();

                    // Check if database is down (critical)
                    const isDatabaseDown = data.database && data.database.status === 'down';
                    const isTmdbDown = data.tmdb && data.tmdb.status === 'down';
                    const isDatabaseDegraded = data.database && data.database.status === 'degraded';

                    // Show alert if database is down or degraded
                    if (isDatabaseDown || isDatabaseDegraded) {
                        showHealthAlert(data.database, 'Database');
                    } else if (isTmdbDown) {
                        // TMDB down is less critical, only show if database is OK
                        showHealthAlert(data.tmdb, 'TMDB API');
                    } else {
                        // All systems healthy - hide alert
                        hideHealthAlert();
                    }
                } catch (error) {
                    console.error('Background health check failed:', error);
                }
            }

            function showHealthAlert(service, serviceName) {
                const alertDiv = document.getElementById('health-alert');
                const messageDiv = document.getElementById('health-alert-message');

                if (!alertDiv || !messageDiv) {
                    return;
                }

                let message = `<strong>${serviceName}:</strong> ${service.message}`;
                if (service.checked_at) {
                    const time = new Date(service.checked_at.replace(' ', 'T')).toLocaleTimeString();
                    message += `<br><small class="text-muted">Last checked: ${time}</small>`;
                }

                messageDiv.innerHTML = message;
                alertDiv.style.display = 'block';
            }

            function hideHealthAlert() {
                const alertDiv = document.getElementById('health-alert');
                if (alertDiv) {
                    alertDiv.style.display = 'none';
                }
            }

            // Run initial check after 5 seconds (let page load first)
            setTimeout(checkSystemHealth, 5000);

            // Run periodic checks every minute
            setInterval(checkSystemHealth, HEALTH_CHECK_INTERVAL);
        })();
    </script>
    {% endif %}

    {% block scripts %}{% endblock %}
</body>
</html>
